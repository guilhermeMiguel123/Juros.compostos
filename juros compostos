<html>
<head>
    <title>Calculadora de Juros Compostos</title>
    <style>
        body {
            margin-top: 200px;
            font-family: Arial, sans-serif;
           
        }

    
        .container {
            margin: 0 auto;
            width: 400px;
           
        }

        input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 30px 0;
            border-radius: 8px;
        }

            button {

                display: flex;
                align-items: center;
                justify-content: center;
                line-height: 1;
                text-decoration: none;
                text-align: center;
                color: #ffffff;
                font-size: 18px;
                border-radius: 5px;
                width: 423px;
                height: 40px;
                font-weight: bold;
                border-bottom: 4px solid #179e43;
                transition: 0.3s;
                box-shadow: 0px 3px 5px 0px rgba(0, 0, 0, 0.4);
                background-color: #26bf59;
            }

            button:hover {
                box-shadow: 0 0 rgba(0, 0, 0, 0.4);
                border-bottom-width: 2px;
                transform: translateY(2px);
            }


        #resultado {
            margin-top: 20px;
            font-size: 20px;
        }


    </style>
</head>
<body>
    <div class="container">
        <h2>Calculadora de Juros Compostos</h2>
        <input type="number" id="principal" placeholder="Principal" min="0">
        <input type="number" id="taxa" placeholder="Taxa de Juros (em %)" min="0" step="0.01">
        <input type="number" id="tempo" placeholder="Tempo (em anos)" min="0">
        <button onclick="calcular()">Calcular</button>
        <div id="resultado"></div>
    </div>
    <script>
        function calcular() {
            var principal = document.getElementById('principal').value;
            var taxa = document.getElementById('taxa').value;
            var tempo = document.getElementById('tempo').value;
            var montante = principal * Math.pow((1 + taxa / 100), tempo);
            document.getElementById('resultado').innerHTML = 'Montante: ' + montante.toFixed(2);
        }
    </script>
</body>
